<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>org.mobicents.examples</groupId>
    <artifactId>VoiceVPN</artifactId>
    <version>2.0.1-SNAPSHOT</version>
    
    <packaging>pom</packaging>    
    <name>Voice VPN</name>
    
    <modules>
        <module>rules</module>	
        <module>deployer</module>
        <module>slee</module>
    </modules>
    
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <profiles>
      <profile>
        <id>release</id>
        <build>
          <plugins>
            <plugin>
              <artifactId>maven-antrun-plugin</artifactId>
              <inherited>false</inherited>
              <executions>
                <execution>
                  <phase>install</phase>
                  <goals>
                      <goal>run</goal>
                  </goals>
                  <configuration>
                    <tasks>
                      <copy overwrite="true" todir="${basedir}/../../release/${release.name}/examples/mms-demo">
                        <fileset dir="${basedir}/slee/services-du/target">
                            <include name="**.jar" />
                            <include name="*.xml" />
                            <include name="*.properties" />
                        </fileset>
                      </copy>
                      <copy overwrite="true" file="${basedir}/web/target/mms-demo-audio.war" todir="${basedir}/../../release/${release.name}/examples/mms-demo/" />
                      <copy overwrite="true" file="${basedir}/slee/services-du/target/build.xml" tofile="${basedir}/../../release/${release.name}/examples/mms-demo/du-management.xml" />
                      <copy overwrite="true" file="${basedir}/release/build.xml" todir="${basedir}/../../release/${release.name}/examples/mms-demo">
                				<filterset>
                					<filter token="JBOSS_VERSION" value="jboss-${jboss.version}" />
                        	<filter token="JBOSS_NODE" value="${node}" />
                				</filterset>
                			</copy>
                    </tasks>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </build>
      </profile>
    </profiles>
    
    
</project>
