<?xml version="1.0" encoding="utf-8"?>
<project name="Release_build" default="deploy-all">

  <property name="home" value="${ant.file.Release_build}/../" />

  <property name="jboss.home" value="${home}../../@JBOSS_VERSION@/" />

  <target name="deploy-all-jmx">
    <ant antfile="${home}../../resources/xmpp/build.xml" target="deploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../examples/google-talk-bot/du-management.xml" target="deploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="undeploy-all-jmx">
    <ant antfile="${home}../../examples/google-talk-bot/du-management.xml" target="undeploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../resources/xmpp/build.xml" target="undeploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="deploy-all">
    <ant antfile="${home}../../resources/xmpp/build.xml" target="deploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../examples/google-talk-bot/du-management.xml" target="deploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="undeploy-all">
    <ant antfile="${home}../../examples/google-talk-bot/du-management.xml" target="undeploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../resources/xmpp/build.xml" target="undeploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

</project>
