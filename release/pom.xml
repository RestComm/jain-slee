							<configuration>
								<scmVersion>${sip-balancer.scmVersion}</scmVersion>
								<scmVersionType>${sip-balancer.scmVersionType}</scmVersionType>
								<checkoutDirectory>
									${checkout.basedir}/extra/sip-balancer
								</checkoutDirectory>
								<connectionUrl>
									scm:git:https://github.com/RestComm/load-balancer.git
								</connectionUrl>
							</configuration>
						</execution>
					</executions>
				</plugin>			
			</plugins>
		</build>
		</profile>
	</profiles>	

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<groupId>org.mobicents.tools</groupId>
				<configuration>
					<eclipseProjectName>slee-release</eclipseProjectName>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<scm>
		<connection>scm:git:ssh://git@github.com:RestComm/jain-slee.git</connection>
		<developerConnection>scm:git:ssh://git@github.com:RestComm/jain-slee.git</developerConnection>
  	</scm>
  
	<!-- dupe info from parent, but it's only way to retrieve the parent without checkout -->

	<repositories>
		<repository>
			<id>restcomm-public-repository-group</id>
			<name>Restcomm Public Maven Repository Group</name>
			<url>https://oss.sonatype.org/content/groups/public</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</snapshots>
		</repository>             
	</repositories>
	
</project>
