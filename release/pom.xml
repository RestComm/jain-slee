						</execution>

						<execution>
							<id>smpp-checkout</id>
							<goals>
								<goal>checkout</goal>
							</goals>
							<phase>validate</phase>
							<configuration>
								<scmVersion>${smpp.scmVersion}</scmVersion>
								<scmVersionType>${smpp.scmVersionType}</scmVersionType>
								<checkoutDirectory>
									${checkout.basedir}/smpp
