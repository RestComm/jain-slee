<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE resource-adaptor-type-jar PUBLIC "-//Sun Microsystems, Inc.//DTD JAIN SLEE Resource Adaptor Type 1.0//EN" "http://java.sun.com/dtd/slee-resource-adaptor-type-jar_1_0.dtd">

<resource-adaptor-type-jar>
    <resource-adaptor-type>
       <description>
         This is the resource adaptor type for the JAIN SLEE TCK 1.0 resource.
         JAIN SLEE TCK 1.0 users must deploy this resource adaptor type into their SLEE, along with
         a JAIN SLEE TCK 1.0 resource adaptor implementation for their SLEE.
         See the JAIN SLEE TCK User Guide for details.
        </description>

        <!-- id -->
        <resource-adaptor-type-name>TCK_Resource_Type</resource-adaptor-type-name>
        <resource-adaptor-type-vendor>jain.slee.tck</resource-adaptor-type-vendor>
        <resource-adaptor-type-version>1.0</resource-adaptor-type-version>

        <!-- classes -->
        <resource-adaptor-type-classes>
            <activity-type>
                <activity-type-name>com.opencloud.sleetck.lib.resource.sbbapi.TCKActivity</activity-type-name>
            </activity-type>
            <activity-context-interface-factory-interface>
                <activity-context-interface-factory-interface-name>
                    com.opencloud.sleetck.lib.resource.sbbapi.TCKActivityContextInterfaceFactory
                </activity-context-interface-factory-interface-name>
            </activity-context-interface-factory-interface>
            <resource-adaptor-interface>
                <resource-adaptor-interface-name>
                    com.opencloud.sleetck.lib.resource.sbbapi.TCKResourceAdaptorSbbInterface
                </resource-adaptor-interface-name>
            </resource-adaptor-interface>
        </resource-adaptor-type-classes>

        <!-- events-->
        <event-type-ref>
            <event-type-name>com.opencloud.sleetck.lib.resource.events.TCKResourceEventX.X1</event-type-name>
            <event-type-vendor>jain.slee.tck</event-type-vendor>
            <event-type-version>1.0</event-type-version>
        </event-type-ref>

        <event-type-ref>
            <event-type-name>com.opencloud.sleetck.lib.resource.events.TCKResourceEventX.X2</event-type-name>
            <event-type-vendor>jain.slee.tck</event-type-vendor>
            <event-type-version>1.0</event-type-version>
        </event-type-ref>

        <event-type-ref>
            <event-type-name>com.opencloud.sleetck.lib.resource.events.TCKResourceEventX.X3</event-type-name>
            <event-type-vendor>jain.slee.tck</event-type-vendor>
            <event-type-version>1.0</event-type-version>
        </event-type-ref>

        <event-type-ref>
            <event-type-name>com.opencloud.sleetck.lib.resource.events.TCKResourceEventY.Y1</event-type-name>
            <event-type-vendor>jain.slee.tck</event-type-vendor>
            <event-type-version>1.0</event-type-version>
        </event-type-ref>

        <event-type-ref>
            <event-type-name>com.opencloud.sleetck.lib.resource.events.TCKResourceEventY.Y2</event-type-name>
            <event-type-vendor>jain.slee.tck</event-type-vendor>
            <event-type-version>1.0</event-type-version>
        </event-type-ref>

        <event-type-ref>
            <event-type-name>com.opencloud.sleetck.lib.resource.events.TCKResourceEventY.Y3</event-type-name>
            <event-type-vendor>jain.slee.tck</event-type-vendor>
            <event-type-version>1.0</event-type-version>
        </event-type-ref>

    </resource-adaptor-type>
</resource-adaptor-type-jar>

