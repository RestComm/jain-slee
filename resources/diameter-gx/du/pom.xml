<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.mobicents.servers.diameter.resources</groupId>
		<artifactId>gx-parent</artifactId>
		<version>2.8.0-SNAPSHOT</version>
	</parent>

	<artifactId>gx-ra-DU</artifactId>

	<name>Mobicents :: Diameter Resources :: ${pom.artifactId}</name>

	<dependencies>
		<!-- This has been commented out since it was already included in the Ro-RA, 
			and hence caused it to be impossible to deploy both at the same time. -->
		<!-- This also means that we now NEED to have another DU deployed in the 
			SLEE that already contains this package. The Ro-RA should also ommit this -->
		<!-- package, and it should be put into a common deployable unit instead -->
		<!-- common library -->
		<!-- <dependency> <groupId>org.mobicents.servers.diameter.resources</groupId> 
			<artifactId>cca-common-library</artifactId> <version>${mobicents.diameter.resources.cca-common.version}</version> 
			</dependency> -->

		<!-- components -->
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>gx-events</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>gx-ratype</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>gx-ra</artifactId>
			<version>${pom.version}</version>
		</dependency>
	</dependencies>

	<build>
		<finalName>diameter-${pom.artifactId}-${pom.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.mobicents.tools</groupId>
				<artifactId>maven-du-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>copy-dependencies</goal>
							<goal>generate-descriptor</goal>
							<goal>generate-ant-management-script</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>deploy-DU</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy overwrite="true" file="target/${project.build.finalName}.jar" todir="${jboss.home}/server/${node}/deploy" />
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>undeploy-DU</id>
						<phase>clean</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete file="${jboss.home}/server/${node}/deploy/${project.build.finalName}.jar" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
